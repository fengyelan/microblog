<form class="form-horizontal" method="post">
    <fieldset>
        <legend>用户登录</legend>
        <div class="form-group">
            <label for="username" class="col-md-2">用户名</label>
            <div class="col-md-5">
                <input type="text" class="form-control" id="username" name="username" placeholder="请输入用户名" />
            </div>
        </div>
        <div class="form-group">
            <label for="pass1" class="col-md-2">密码</label>
            <div class="col-md-5">
                <input type="password" class="form-control" id="pass1" name="password" placeholder="请输入密码"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-5">
                <button type="submit" class="btn btn-primary">立即登录</button>
            </div>
        </div>
    </fieldset>
</form>